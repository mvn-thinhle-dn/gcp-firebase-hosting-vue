{
  "hosting": {
    "public": "dist",
    "rewrites": [ {
      "source": "**", "function": "app/index.html"
    } ],
      "redirects": [ {
      "source" : "/",
      "destination" : "/",
      "type" : 301
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
